<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="jobUi"
            type="com.linh.androiddeveloperchallenge.ratesvolume.presentation.model.TimesheetUi.SuccessUi.JobUi" />

    </data>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clipToPadding="true"
            app:cardCornerRadius="@dimen/radius_item_job"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <ViewStub
                    android:id="@+id/stub_job_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ViewStub
                    android:id="@+id/stub_job_assignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_item_job"
                    android:layout_marginEnd="@dimen/margin_end_item_job" />

                <ViewStub
                    android:id="@+id/stub_job_assignment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_item_job"
                    android:layout_marginEnd="@dimen/margin_end_item_job" />

                <ViewStub
                    android:id="@+id/stub_job_assignment_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_item_job"
                    android:layout_marginEnd="@dimen/margin_end_item_job" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

</layout>